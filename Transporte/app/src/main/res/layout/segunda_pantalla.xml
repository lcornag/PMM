<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PantallaEnvio">


    <ImageView
        android:id="@+id/mapazona"
        android:layout_width="fill_parent"
        android:layout_height="200px"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/zonaenvio"
        android:layout_below="@+id/mapazona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zona: "/>
    <TextView
        android:id="@+id/lblContinente"
        android:layout_below="@+id/zonaenvio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continente: "/>
    <TextView
        android:id="@+id/tarifa"
        android:layout_below="@+id/lblContinente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tarifa: "/>

    <TextView
        android:id="@+id/peso"
        android:layout_below="@+id/tarifa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Peso: "/>

    <TextView
        android:id="@+id/preferencia"
        android:layout_below="@+id/peso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preferencia: "/>

    <TextView
        android:id="@+id/costefinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COSTE FINAL: "
        android:layout_marginTop="92dp"
        android:layout_below="@+id/preferencia"/>

    <Button
        android:id="@+id/guardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar registro"
        android:layout_above="@+id/visualizar"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="precio"
        android:id="@+id/precio"
        android:layout_below="@+id/preferencia" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="precio extra"
        android:id="@+id/precioextra"
        android:layout_below="@+id/precio"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visualizar registros"
        android:id="@+id/visualizar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>