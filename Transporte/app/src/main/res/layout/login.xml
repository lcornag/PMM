<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar sesión"
        android:id="@+id/iniciarSesion"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_weight="0.06" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Usuario"
        android:ems="10"
        android:id="@+id/entryUsuario"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/iniciarSesion"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Contraseña"
        android:ems="10"
        android:id="@+id/entryContraseña"
        android:layout_below="@+id/entryUsuario"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No tengo cuenta! Registrarme"
        android:id="@+id/sincuenta"
        android:layout_below="@+id/entryContraseña"
        android:layout_alignLeft="@+id/entryContraseña"
        android:layout_alignStart="@+id/entryContraseña"
        android:layout_marginTop="129dp"
        android:layout_alignRight="@+id/entryContraseña"
        android:layout_alignEnd="@+id/entryContraseña" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar sesión"
        android:id="@+id/iniciar"
        android:layout_below="@+id/entryContraseña"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp" />

</RelativeLayout>